{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@db/*": ["db/*"],
      "@services/*": ["services/*"],
      "@servers/*": ["servers/*"],
      "@utils/*": ["utils/*"],
      "@src/*": ["."]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "files": ["types.d.ts"]
}
